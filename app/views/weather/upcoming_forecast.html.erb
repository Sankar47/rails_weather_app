<div class="row justify-content-center">
  <div class="col-6">
    <div class="card">
      <div class="card-header">
          7-Day Forecast in 
          <span class="text-danger"><%= @city["name"] %></span>
      </div>
      <div class="card-body">
        <table class="table">
          <thead>
            <tr>
              <th>Date</th>
              <th>Temperature</th>
              <th>Feels Like</th>
              <th>Min</th>
              <th>Max</th>
            </tr>
          </thead>
          <tbody>
            <% @forecast.each do |day| %>
              <tr>
                <td><%= day[:date] %></td>
                <td><%= day[:temp] %>째C</td>
                <td><%= day[:feels_like] %>째C</td>
                <td><%= day[:min] %>째C</td>
                <td><%= day[:max] %>째C</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="jumbotron d-flex justify-content-end">
      <%= link_to "Back to Address form", root_path(), class: "btn btn-secondary mt-3" %>
    </div>
  </div>
</div>