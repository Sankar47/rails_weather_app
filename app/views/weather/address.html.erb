<h1 class="h2 mb-4">Weather Search</h1>

<%= form_with url: "/weather/search", method: :post, local: true, class: "row g-3 mb-3" do |form| %>
	<div class="col-md-4">
		<%= form.label :city %>
		<%= form.text_field :city, class: "form-control", required: true %>
	</div>
	<div class="col-md-4">
		<%= form.label :state %>
		<%= form.text_field :state, class: "form-control" %>
	</div>
	<div class="col-md-4">
		<%= form.label :country_code %>
		<%= form.text_field :country_code, class: "form-control", required: true %>
	</div>
	<div class="col-12">
		<%= form.submit "Get Weather", class: "btn btn-primary" %>
	</div>
<% end %>

<% if @weather || @error_message %>
  <%= render :partial => 'weather_card' %>
<% elsif @forecast %>
  <%= render :partial => 'forecast_table' %>
<% end %>
