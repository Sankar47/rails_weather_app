<h1 class="h2 mb-4">Weather Search</h1>

<%= form_with url: "/weather/search", method: :post, local: true, class: "row g-3 mb-3 align-items-end" do |form| %>
	<div class="col-md-4">
		<%= form.label :zip_code %>
		<%= form.text_field :zip_code, class: "form-control", required: true %>
	</div>
	<div class="col-md-4">
		<%= form.label :country_code %>
    <%= form.country_select :country_code, {}, { class: "form-control", required: true } %>
	</div>
	<div class="col-md-4">
		<%= form.submit "Get Weather", class: "btn btn-primary w-100" %>
	</div>
<% end %>

<% if @error_message %>
  <div class="alert alert-danger"><%= @error_message %></div>
<% end %>